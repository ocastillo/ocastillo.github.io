{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "index.html",
    "public/*"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "watch": [
    "index.js",
    "app/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json jsx",
  "events": {
    "start": "node build-static.js",
    "restart": "node build-static.js"
  }
}
